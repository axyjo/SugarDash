<div class="widget_title">Current weather</div>
<div>{{location.city}}, {{location.state_abbreviation}}</div>
<div>Current conditions: <img src="{{condition.image}}" />{{condition.temperature}} &deg;{{units.temperature}} - {{condition.text}}</div>

{{#each forecast}}
<div>{{this.day}}: {{this.high_temperature}} &deg;{{units.temperature}}/ {{this.low_temperature}} &deg;{{units.temperature}} -  {{this.condition}}</div>
{{/each}}
